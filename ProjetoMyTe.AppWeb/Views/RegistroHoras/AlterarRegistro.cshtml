@model ProjetoMyTe.AppWeb.Models.Entities.RegistroHora

@{
    ViewData["Title"] = "AlterarRegistro";
}

<h1>AlterarRegistro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AlterarRegistro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input type="hidden" asp-for="Id" />
               
            <div class="mt-3">
                <label asp-for="IdWbs" class="control-label"></label>
                <input asp-for="IdWbs" class="form-control" />
                <span asp-validation-for="IdWbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataRegistro" class="control-label"></label>
                <input asp-for="DataRegistro" class="form-control" />
                <span asp-validation-for="DataRegistro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dia" class="control-label"></label>
                <input asp-for="Dia" class="form-control" />
                <span asp-validation-for="Dia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horas" class="control-label"></label>
                <input asp-for="Horas" class="form-control" />
                <span asp-validation-for="Horas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="Alterar registro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListarRegistros">Voltar para a lista de registros</a>
</div>

